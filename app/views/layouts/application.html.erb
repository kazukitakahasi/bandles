<!DOCTYPE html>
<html>
  <head>
    <title>Bandles</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
    <div class= "notice">
      <div class= "alert alert-<%= key %>">
        <%= value %>
      </div>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
