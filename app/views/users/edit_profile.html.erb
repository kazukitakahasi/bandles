
<div class="user-edit-inverse" style="padding-top:80px;">
	<div class="search-form-box">
		<h1 class="header-buttons-search-recruitments search-user">ユーザープロフィール</h1>

		<%= form_for(@user) do |f| %>
			<table class="newform">
				<tbody>
					<tr>
						<th><label>名前</label></th>
						<td>
							<p><%= f.text_field :name, class: "uses_edit-show-info col-sm-6 col-xs-7", :placeholder => "" %></p>
						</td>
					</tr>
					<tr>
						<th><div><label>性別</label></th>
						<td><%= f.radio_button :gender , :男性 %><label>男性</label>
						<%= f.radio_button :gender , :女性 %><label>女性</label></td>
					</tr>
					<tr>
						<th><label>誕生日</label></th>
						<td><%== sprintf(f.date_select(:birthday, :use_month_numbers=>true, :date_separator => '%s', :start_year=>1930, :end_year => Time.now.year, :default =>'1990-1-1'.to_date), '年','月') + '日生まれ' %></td>
					</tr>
					<tr>
					<tr>
						<th><label>都道府県</label></th>
						<td><%= f.collection_select :pref, JpPrefecture::Prefecture.all, :name, :name, class: "sign-up-info-box" %></td>
					</tr>
					<tr>
						<th><label>URL</label></th>
						<td>
							"https://www.youtube.com/embed/
							<div><%= f.text_field :url, class: "uses_edit-show-info col-sm-6 col-xs-7", :placeholder => "" %></div>
						</td>
					</tr>
					<tr>
						<th><label>好みのジャンル(5つまで)</label></th>
						<td><%= f.fields_for :user_categories do |m| %>
						<%= m.collection_select :category_id,
				                                Category.all,
				                                :id,
				                                :name,
				                                multiple: true,
				                                prompt: 'ジャンル' %><br>
						<% end %></td>
					</tr>

					<tr>
						<th><label>担当パート(5つまで)</label></th>
						<td><%= f.fields_for :user_charges do |m| %>
						<%= m.collection_select :charge_id,
				                                Charge.all,
				                                :id,
				                                :name,
				                                multiple: true,
				                                prompt: 'パート' %><br>
						<% end %></td>
					</tr>



					<tr>
						<th><label>好きなアーティスト(5グループまで)</label></th>
						<td><%= f.fields_for :favorite_artists do |m| %>
							<%= m.text_field :name, class: "uses_edit-show-information col-sm-12 col-xs-8", :placeholder => "" %><br>
						<% end %></td>
					</tr>
					<tr>
						<th><label>好きなアルバム(5枚まで)</label></th>
						<td><%= f.fields_for :favorite_albums do |m| %>
							<%= m.text_field :name, class: "uses_edit-show-info col-sm-12 col-xs-8", :placeholder => "" %><br>
						<% end %></td>
					</tr>

					<tr>
						<th><label>好きな曲(5曲まで)</label></th>
						<td><%= f.fields_for :favorite_songs do |m| %>
							<%= m.text_field :name, class: "uses_edit-show-info col-sm-12 col-xs-8", :placeholder => "" %><br>
						<% end %></td>
					<tr>
						<th><label>自己紹介文</label></th>
						<td><p><%= f.text_area :introduction, :size=>"60x10" , :placeholder => "1000文字以内", class: "introduction-box" %></p></td>
					</tr>
					<tr>
					<th><%= f.submit "内容を更新" %></th>
					</tr>
				</tbody>
			</table>
		<% end %>
	</div>
</div>
