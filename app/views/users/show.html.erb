
<div class="user-profile-inverse" style="padding-top:80px;">
  <div class="search-form-box">
    <h1 class="header-buttons-search-users search-user">'<%= @user.name %>'さんのプロフィール</h1>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <%= attachment_image_tag @user, :profile_image, :fill, 200, 200,class: "profile-img", fallback: "no_image.jpg" %>
        </label>
    	</div>
    	<div class="recruitment-information-box">
        <label class="recruitment-information-contents">
      		<label class="recruitment-information-title">● 名前：</label>
      		<label><%= @user.name %></label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 性別：</label>
          <%= @user.gender%>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 年齢：</label>
          <%= @user.age %>歳
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 都道府県：</label>
          <%= @user.pref %>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 自己紹介文：</label>
          <%= @user.introduction %>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 担当楽器：</label>
          <% @user_charges.each do |user_charge| %>
          	<%= user_charge.charge.name %>
            <label>/</label>
          <% end %>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 好みのジャンル：</label>
          <% @user_categories.each do |user_category| %>
          	<%= user_category.category.name %>
            <label>/</label>
          <% end %>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 好きなアーティスト：</label>
          <% @favorite_artists.each do |favorite_artist| %>
          	<label class="favorite-box"><%= favorite_artist.name %></label>
          <% end %>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 好きなアルバム：</label>
          <% @favorite_albums.each do |favorite_album| %>
          	<label class="favorite-box"><%= favorite_album.name %></label>
          <% end %>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● 好きな曲：</label>
          <% @favorite_songs.each do |favorite_song| %>
          	<label class="favorite-box"><%= favorite_song.name %></label>
          <% end %>
        </label>
      </div>
      <div class="recruitment-information-box">
        <label class="recruitment-information-contents">
          <label class="recruitment-information-title">● URL：</label>
          <div class="youtube">
            <iframe width="400" height="300" src="https://www.youtube.com/embed/<%= @user.url %>" frameborder="0" allowfullscreen></iframe>
          </div>
        </label>
      </div>
      <% if user_signed_in? && @user != current_user %>
        <div class="user-show-message">
          <i class="iconcolor fas fa-envelope-square"></i>
          <%= link_to user_recipient_user_messages_path(current_user.id, @user.id) do %>
            メッセージを送る
          <% end %>
        </div>

        <div class="user-evaluations-box">
          <p>ユーザーの評価</p>

          <% if @good_evaluationexist.blank? %>
              <%= link_to user_good_evaluations_path(@user), method: :post do %>
                <i class="iconcolor far fa-thumbs-up"></i>
                <%= @good_evaluation.count %>
              <% end %>
          <% else %>
              <%= link_to user_good_evaluations_path(@user), method: :delete do %>
                <i class="iconcolor far fa-thumbs-up"></i>
                <%= @good_evaluation.count %>
              <% end %>
          <% end %>

          <% if @bad_evaluationexist.blank? %>
              <%= link_to user_bad_evaluations_path(@user), method: :post do %>
                <i class="iconcolor far fa-thumbs-down"></i>
                <%= @bad_evaluation.count %>
              <% end %>
          <% else %>
              <%= link_to user_bad_evaluations_path(@user), method: :delete do %>
                <i class="iconcolor far fa-thumbs-down"></i>
                <%= @bad_evaluation.count %>
              <% end %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
