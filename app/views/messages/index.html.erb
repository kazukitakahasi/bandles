
<div class="message-inverse" style="padding-top:80px;">
	<div class="message-form-box">
		<h1 class="header-buttons-search-recruitments search-user">'<%= @recipient_user.name %>'さんにメッセージを送る</h1>
		<%= form_for @message, url: user_recipient_user_messages_path do |f| %>
			<div class="users-message-box">
				<p><%= f.text_area :content, class: "users-message", :size=>"85x15" , :placeholder => "送信内容" %></p>
				<div class="message-submit-box">
					<%= f.submit "送信する" %>
				</div>
			</div>
		<% end %>
		<%= paginate @messages %>
		<% @messages.each do |message| %>
			<div class="each-users-message-box">
				<label class="message-user-name"><%= message.user.name %></label>
				<p class="message-user-content"><%= message.content %></p>
				<label> <%= message.created_at.strftime('%Y/%m/%d %H:%M') %>
			</div>
		<% end %>
		<%= paginate @messages %>
	</div>
</div>