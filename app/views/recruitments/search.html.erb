<h1>募集記事検索フォーム</h1>

<%= search_form_for(@q, url:search_result_recruitments_path )  do |f| %>

	<div><%= f.select :recruitment_type_eq, Recruitment.recruitment_types %></div>

	<div><%= f.collection_select :pref_eq, JpPrefecture::Prefecture.all, :name, :name, :include_blank => '指定なし', class: "sign-up-info-box" %></div>

	<div><label>募集パート</label><%= f.collection_check_boxes :charges_id_in, Charge.all, :id, :name %></div>

	<div><label>ジャンル</label><%= f.collection_check_boxes :categories_id_in, Category.all, :id, :name %></div>

	<div><label>活動地域</label><%= f.select :activity_area_eq, Recruitment::ACTIVITYAREA, :include_blank => '指定なし' %></div>

	<div><label>活動周期</label><%= f.select :activity_day_eq, Recruitment::ACTIVITYDAY, :include_blank => '指定なし' %></div>

	<div><label>活動の方向性</label><%= f.select :activity_direction_eq, Recruitment::ACTIVITYDIRECTION, :include_blank => '指定なし' %></div>

	<div><label>演奏楽曲</label><%= f.select :playing_music_eq, Recruitment::PLAYINGMUSIC, :include_blank => '指定なし' %></div>

	<div><label>性別</label><%= f.select :recruitment_gender_eq, Recruitment::GENDER, :include_blank => '指定なし' %></div>

	<div><label>募集の年齢</label>
		<%= f.number_field :recruitment_age_gteq_any, min: 5, max: 100, class: "bpm-select-range" %><label> ~ </label>
		<%= f.number_field :recruitment_age2_lteq_any, min: 5, max: 100, class: "bpm-select-range" %>
	</div>

	<div><label>キーワード</label>
		<%= f.search_field :title_or_introduction_cont_any %>を含む
	</div>

	<div><%= f.submit "検索", class: "start-search-button flex-end" %></div>
<% end %>